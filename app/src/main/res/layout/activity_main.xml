<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topleft"
        android:text="Top Left"
        android:background="@color/c1"/>
    <Button
        android:layout_marginLeft="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topright"
        android:text="Top right"
        android:background="@color/c1"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full width button"
        android:id="@+id/fullbuta"/>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:id="@+id/tablerw1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Left small button"
                android:layout_marginLeft="15dp"
                android:background="@color/c2"
                android:id="@+id/lefts"/>
        </TableRow>
         <TableRow
             android:id="@+id/tablerw2"
             android:layout_width="match_parent"
             android:layout_height="40dp"
             >
             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_marginLeft="80dp"
                 android:text="Center small button"
                 android:background="@color/c2"
                 android:id="@+id/centers"/>
         </TableRow>
        <TableRow
            android:id="@+id/tablerw3"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:text="Right small button"
                android:background="@color/c2"
                android:id="@+id/rights"/>
            </TableRow>
    <TableRow
        android:id="@+id/tablerw4"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Spinner
            android:id="@+id/spin1"
            android:layout_width="match_parent"
            android:layout_height="40dp">

        </Spinner>
        </TableRow>
        </TableLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal" >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drawable Left"
        android:drawableLeft="@drawable/ab"/>
    </LinearLayout>
</LinearLayout>
